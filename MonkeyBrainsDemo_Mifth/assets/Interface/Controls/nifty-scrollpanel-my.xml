<?xml version="1.0" encoding="UTF-8"?>
<nifty-controls>
    
  <controlDefinition name="scrollPanel-my" childRootId="#nifty-scrollpanel-child-root" controller="de.lessvoid.nifty.controls.scrollpanel.ScrollPanelControl">
      
    <panel childLayout="vertical">
      <panel childLayout="horizontal">
        <panel id="#nifty-scrollpanel-child-root" childLayout="absolute" childClip="true">
          <interact onMouseWheel="mouseWheel()" />
        </panel>
        <control id="#nifty-internal-vertical-scrollbar" name="verticalScrollbar" style="nifty-vertical-scrollbar-my"/>
      </panel>
      <panel id="#nifty-internal-horizonal-panel" childLayout="horizontal">
        <control id="#nifty-internal-horizontal-scrollbar" name="horizontalScrollbar" style="nifty-horizontal-scrollbar-my"/>
        <panel align="right" style="#bottom-right" />
      </panel>
    </panel>
  </controlDefinition>
</nifty-controls>